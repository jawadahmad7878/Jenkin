# Base image for Node.js environment
FROM node:18-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json (if applicable)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy your project code
COPY . .

# Build your project (assuming a build script in package.json)
RUN npm run build

# Create a slimmer image for production
FROM node:18-alpine AS slim

# Copy only the production-ready files from the builder stage
COPY --from=builder /app/build /app

# Expose port (adjust if your application listens on a different port)
EXPOSE 3000

# Start the application (assuming an entry point script in package.json)
CMD [ "npm", "start" ]